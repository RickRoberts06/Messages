<h1> Supporter </h1>
---------------------------------------

<div class="new_message">
<%= form_for Message.new do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :email %>
    <%= f.text_field :email %><br>
    <%= f.label :department %>
    <%= f.radio_button :department, 'sales' %> Sales
    <%= f.radio_button :department, 'marketing' %> Marketing
    <%= f.radio_button :department, 'technical' %> Technical <br>
    <%= f.label :message %>
    <%= f.text_field :message %><br>
    <%= f.submit "Save" %>
  <% end %>
</div>
